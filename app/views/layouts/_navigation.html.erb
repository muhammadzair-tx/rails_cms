<% subjects ||= [] %>
<!-- this for safty if somehow the array is empty -->
<ul>
<% subjects.each do |subject| %>
  <li>
    <%= subject.name %>
    <ul>
    <% subject.pages.visible.sorted.each do |page| %>
      <li><%= link_to_unless_current(page.name, public_show_path(page.permalink)) %></li>
      <!-- so smart of rails -->
    <% end %>
    </ul>
  </li>
  <% end %>
</ul>
